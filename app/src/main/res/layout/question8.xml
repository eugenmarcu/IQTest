<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_sports"
                style="@style/Question1Style"
                android:src="@drawable/sports"
                tools:src="@drawable/ic_launcher_background" />

            <LinearLayout style="@style/LayoutStyle">

                <TextView
                    style="@style/WrapContentStyle"
                    android:text="@string/q8" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp">

                    <CheckBox
                        android:id="@+id/right_answer_volley"
                        style="@style/WrapContentStyle"
                        android:text="@string/q8_a1" />

                    <CheckBox
                        android:id="@+id/wrong_answer_volley1"
                        style="@style/WrapContentStyle"
                        android:text="@string/q8_a2" />

                    <CheckBox
                        android:id="@+id/wrong_answer_volley2"
                        style="@style/WrapContentStyle"
                        android:text="@string/q8_a3" />

                    <CheckBox
                        android:id="@+id/wrong_answer_volley3"
                        style="@style/WrapContentStyle"
                        android:text="@string/q8_a4" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>