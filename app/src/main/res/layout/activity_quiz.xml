<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_math"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_margin="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/math"
                    tools:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your answer is?"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/image_math"
                        android:layout_marginLeft="16dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10" />

                        <RadioButton
                            android:id="@+id/right_answer_math"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20" />
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_usain"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="3"
                    android:layout_margin="8dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/usain_bolt"
                    tools:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Who is he?"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@id/image_usain"
                        android:layout_marginLeft="16dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Muhammad Ali" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Michael Jordan" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiger Woods" />

                        <RadioButton
                            android:id="@+id/right_answer_usain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Usain Bolt" />
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_bucharest"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="3"
                    android:layout_margin="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/bucharest"
                    tools:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Which is the capital of Romania?"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <RadioButton
                            android:id="@+id/right_answer_geography"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bucharest" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Budapest" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Belgrade" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bratislava" />
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_suzuki"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="3"
                    android:layout_margin="8dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/suzuki"
                    tools:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This logo belongs to which brand?"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saab" />

                        <RadioButton
                            android:id="@+id/right_answer_cars"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suzuki" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seat" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ssangyong" />
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_math2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:layout_margin="8dp"
                    android:src="@drawable/math2"
                    tools:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">



                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <CheckBox
                            android:id="@+id/wrong_answer_math2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2062" />

                        <CheckBox
                            android:id="@+id/right_answer_math2_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2412" />

                        <CheckBox
                            android:id="@+id/right_answer_math2_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1914" />

                        <CheckBox
                            android:id="@+id/right_answer_math2_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1926" />
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_eu"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:layout_margin="8dp"
                    android:src="@drawable/eu"
                    tools:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Witch of these countries are in the European Union?"/>


                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <CheckBox
                            android:id="@+id/wrong_answer_eu1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Switzerland" />

                        <CheckBox
                            android:id="@+id/wrong_answer_eu2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Serbia" />

                        <CheckBox
                            android:id="@+id/right_answer_eu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bulgaria" />

                        <CheckBox
                            android:id="@+id/wrong_answer_eu3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Russia" />
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_car_brands"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:layout_margin="8dp"
                    android:src="@drawable/car_brands"
                    tools:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Witch of these car brands are from Germany?"/>


                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <CheckBox
                            android:id="@+id/wrong_answer_car_brands1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fiat" />

                        <CheckBox
                            android:id="@+id/wrong_answer_car_brands2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Honda" />

                        <CheckBox
                            android:id="@+id/wrong_answer_car_brands3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mazda" />

                        <CheckBox
                            android:id="@+id/right_answer_car_brands"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Opel" />
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="8dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_sports"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitCenter"
                    android:layout_margin="8dp"
                    android:src="@drawable/sports"
                    tools:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Witch of these sports have 6 players per team?"/>


                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp">

                        <CheckBox
                            android:id="@+id/right_answer_sports"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Volleyball" />

                        <CheckBox
                            android:id="@+id/wrong_answer_sports1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Basketball" />

                        <CheckBox
                            android:id="@+id/wrong_answer_sports2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Baseball" />

                        <CheckBox
                            android:id="@+id/wrong_answer_sports3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Water polo" />
                    </RadioGroup>
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Submit"/>

    </LinearLayout>


</ScrollView>

